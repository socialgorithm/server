{
    "compilerOptions": {
      "baseUrl": "./",
      "declaration": true,
      "lib": ["es7", "dom"],
      "skipLibCheck": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "noImplicitAny": true,
      "noEmitOnError": true,
      "outDir": "dist",
      "paths": {
        "../*": [
          "src/*"
        ]
      },
      "preserveConstEnums": true,
      "sourceMap": true,
      "types": [ "mocha" ],
      "removeComments": true,
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "src/**/*.spec.ts"
    ],
    "typeRoots": [
      "node_modules/@types",
      "src/lib/definitions"
    ]
  }
